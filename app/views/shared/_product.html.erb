<div class="col-md-4">
<div class="card">
 <% if model.main_image.attached? %>
  <%= image_tag model.main_image, class: "card-img-top w-100", style: "height:15vw;object-fit:cover" %>
  <% else %>
  <td><p>No image</p></td>
  <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= model.name %></h5>
      <p class="card-text"><%=  model.description.truncate(20) %></p>
      <p class="card-text"><small class="text">Category : <%=  model.category.name %></small></p>
      <p class="card-text"><small class="text">Brand : <%= model.brand.name %></small></p><% model.brand.name %></small></p>
      <button class="btn btn-success btn-sm" onclick="add_to_cart(<%= model.id %>)">Add to cart</button>
      <%= link_to "View", product_path(model.slug), class: "btn btn-success btn-sm" %>
    </div>
  </div>
</div>
